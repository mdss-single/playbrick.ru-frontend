$big = "screen and (max-width:1200px)";
$tablet = "screen and (max-width:992px)";
$phone = "screen and (max-width:768px)";
$phone-small = "screen and (max-width:480px)";

/*  <general>  */
body
	display -webkit-flex
	display -moz-flex
	display -ms-flex
	display -o-flex
	display flex
	flex-direction column
	color #000
	font normal 1.5rem/1.3 'Open Sans', sans-serif;
	background-color #fff
:-moz-placeholder
	opacity 1
	color currentColor
:-ms-input-placeholder
	opacity: 1
	color currentColor
a
	color inherit
	font inherit
	text-decoration none
	transition all .2s
	&:hover
		text-decoration underline
.main
	flex 1
	position relative
	&:before
		position absolute
		top 0
		right 0
		left 0
		height 9px
		background url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAAJAgMAAACOKK53AAAACVBMVEUPGhwPGhwPGhx/ZskwAAAAA3RSTlMCBw3IAvrKAAAAD0lEQVQI12NoAEIHMIQCABhSAcHoKhv8AAAAAElFTkSuQmCC') repeat-x 0 0
		content ''
/*  </general>  */

/*  <menu>  */
.menu
	position fixed
	top 0
	bottom 0
	left 0
	z-index 999
	overflow-y auto
	width 310px
	background-color #fff
	border-right 2px solid #ffd401
	transform translateX(-103%)
	transition all .4s
	&--active
		transform translateX(0)
	&__cover
		position fixed
		top 0
		right 0
		bottom 0
		left 0
		z-index 998
		background-color rgba(#000, .6)
	&__main
		display -webkit-flex
		display -moz-flex
		display -ms-flex
		display -o-flex
		display flex
		flex-direction column
		min-height 100%
	&__logo
		flex-shrink 0
		display block
		text-align center
		margin 15px 0
	&__auth
		flex-shrink 0
		color #fff
		background-color #292929
		padding 15px
		&-item
			display block
			padding 5px 0
	&__nav
		flex 1
		padding 15px
		&-item
			display block
			padding 5px 0
	&__footer
		background-color #ffd401
		padding 15px
		p
			margin 0
/*  </menu>  */

/*  <header>  */
.header
	position relative
	flex-shrink 0
	.full
		height 175px
		@media $tablet
			height 225px
		@media $phone
			height 350px
			padding-top 50px
		&:after
			position absolute
			right 15px
			bottom 16px
			width 163px
			height 22px
			background-image url('../i/header-payment.png')
			content ''
			@media $tablet
				display none
	&:before
		position absolute
		top 0
		right 0
		left 0
		z-index -1
		height 37px
		background-color #292929
		content ''
	&__menu
		position absolute
		top 8px
		left 15px
		width 26px
		height 20px
		border solid #fff
		border-width 2px 0
		@media screen and (min-width:769px)
			display none
		&:before
			position absolute
			top 50%
			right 0
			left 0
			height 2px
			background-color #fff
			content ''
			transform translateY(-50%)
		&:after
			position absolute
			top 50%
			left 100%
			color #fff
			font-size 2.2rem
			font-family Rubik
			text-transform uppercase
			padding-left 10px
			content 'Меню'
			transform translateY(-50%)
	&__address
		position absolute
		top 0
		left 15px
		color #fff
		font-style normal
		font-size 1.4rem
		line-height 37px
		@media $phone
			display none
	&__auth
		position absolute
		top 0
		right 15px
		color #fff
		line-height 37px
		&-login
			background url('data:image/png;base64,') no-repeat 0 calc(50% + 1px)
			padding-left 20px
		&-register
			margin-left 10px
	&__logo
		position absolute
		top 60px
		left 15px
		@media $phone
			display block
			position static
			text-align center
	&__search
		position absolute
		top 62px
		left 305px
		width 360px
		@media $big
			width 240px
		@media $tablet
			top 128px
			left 15px
			right 15px
			width auto
		@media $phone
			position relative
			top auto
			right auto
			left auto
			margin-top 15px
		&-input
			width 100%
			height 43px
			font-size 1.4rem
			border 1px solid #eeb70f
			border-radius 2px
			padding 0 64px 0 10px
			transition all .2s
			&:focus
				box-shadow 0 0 2px #eeb70f
		&-btn
			position absolute
			top 1px
			right 1px
			bottom 1px
			width 54px
			background #ffd401 url('../i/icons/icon-zoom.png') no-repeat center center
			border 0
			border-radius 0 2px 2px 0
			transition all .2s
			&:hover
			&:focus
				background-color darken(#ffd401, 2)
	&__phone
		position absolute
		top 60px
		right 210px
		text-align right
		@media $phone
			position static
			text-align center
			margin-top 20px
		&-number
			display block
			font 500 2rem/1 Rubik
		&-notice
			color #555
			font-size 1.3rem
	&__cart
		position absolute
		top 62px
		right 15px
		width 165px
		height 43px
		line-height @height
		text-decoration none
		background #ffd401 url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAABYAAAAWBAMAAAA2mnEIAAAAD1BMVEUAAAD///////////////+PQt5oAAAABHRSTlMA5kpJG2qUMwAAADFJREFUGNNjcHFxcWCAAEw2HKCxXcAAPxsEWChmQwFuNm7ALGgAJxldBLCSTIIKEBIAxdsYM3+Ha0EAAAAASUVORK5CYII=') no-repeat 25px center
		border-radius 2px
		padding-left 60px
		a:hover&
			text-decoration none
			background-color darken(#ffd401, 2)
		@media $phone
			display block
			position static
			width 100%
			margin-top 10px
	&__nav
		position absolute
		bottom 0
		left 305px
		@media $phone
			display none
		&-item
			line-height 45px
			text-decoration underline
			text-decoration-color #ccc
			margin-right 26px
			a:hover&
				text-decoration-color #000
	&__catalog-link
		position absolute
		bottom 0
		left 15px
		width 262px
		height 45px
		font-weight 500
		font-family Rubik
		line-height @height
		text-transform uppercase
		background #ffd401 url('../i/header-burger.png') no-repeat calc(100% - 16px) center
		padding-left 15px
		@media $phone
			right 15px
			width auto
		a:hover&
		&--active
			text-decoration none
			background-color darken(#ffd401, 2)
	&__catalog
		display none
		position absolute
		top 175px
		right 15px
		left 15px
		z-index 19
		background-color #ffd401
		box-shadow 7px 7px 0 rgba(#000, .2)
		@media $tablet
			top 225px
		@media $phone
			top 350px
		&--active
			display -webkit-flex
			display -moz-flex
			display -ms-flex
			display -o-flex
			display flex
			animation fade .5s
		&-main
			flex 1
			columns 3
			column-gap 15px
			padding 15px 0
			margin-right 15px
			@media $tablet
				columns 2
			@media $phone
				overflow-y auto
				max-height 350px
			@media $phone-small
				column-count auto
		&-item
			display block
			padding 5px 15px
			a:hover&
				text-decoration none
				background-color #ffea80
		&-filter
			width 292px
			padding 25px 30px
			background-color #ffea80
			@media $phone
				display none
	&-filter
		&__title
			font-size 2rem
			margin 0 0 15px
		&__subtitle
			margin 0 0 10px
		&__gender
			position absolute
			left -9999px
			& + label
				display block
				opacity .8
				font-size 1.4rem
				line-height 32px
				background-repeat no-repeat
				padding-left 30px
				cursor pointer
			&--boys
				background-image url('../i/filter-gender-male.png')
				margin-bottom 10px
			&--girls
				background-image url('../i/filter-gender-female.png')
				margin-bottom 30px
			&:checked + label
				opacity 1
				text-decoration underline
		&__age
			display -webkit-flex
			display -moz-flex
			display -ms-flex
			display -o-flex
			display flex
			justify-content space-between
			&-item
				position absolute
				left -9999px
				& + label
					opacity .8
					font-size 2rem
					font-family Rubik
					cursor pointer
				&:checked + label
					opacity 1
					text-decoration underline
		&__btn
			margin-top 15px
/*  </header>  */

/*  <viewed>  */
.viewed
	background-color #f0f0f0
	padding 25px 0 40px
	margin-top 35px
	&__title
		font 500 2.2rem Rubik
		margin 0 0 20px
	&__list
		.catalog__item
			width calc(25% - 2px)
			margin-right 2px
			transition none
			&:hover
				box-shadow none
			@media $tablet
				width calc(33.33% - 2px)
			@media $phone
				width 50%
			@media $phone-small
				width 100%
		.flickity-prev-next-button
			width 58px
			height @width
			background-color #ffd401
			border 4px solid #fff
			transition all .2s
			@media $phone
				width 40px
				height @width
			&:hover
				background-color darken(#ffd401, 2)
			&:focus
				box-shadow none
			&.previous
				left -(@width / 2)
				@media $big
					left -20px
				@media $phone
					left -10px
			&.next
				right -(@width / 2)
				@media $big
					right -20px
				@media $phone
					right -10px
/*  </viewed>  */

/*  <footer>  */
.footer
	flex-shrink 0
	background-color #ffd401
	.full
		height 170px
		@media $phone
			height 140px
	&__nav
		position absolute
		top 20px
		left 15px
		@media $phone
			display none
		&-item
			margin-right 20px
			@media $tablet
				margin-right 10px
	&__social
		display -webkit-flex
		display -moz-flex
		display -ms-flex
		display -o-flex
		display flex
		justify-content flex-start
		position absolute
		top 62px
		left 15px
		@media $phone
			display block
			top 18px
			right 15px
			left auto
		&-item
			width 32px
			height @width
			background-repeat no-repeat
			background-position center center
			border 1px solid #000
			border-radius 50%
			margin-right 10px
			@media $phone
				display block
				margin-right 0
				margin-bottom 5px
			&--fb
				background-image url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAkAAAAQCAMAAADzlqVxAAAAM1BMVEUAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAACjBUbJAAAAEXRSTlMAmXVjcWYfjogoEjIZWUk8Be3excgAAABHSURBVAjXncpLDsAgCEVRngIK2s/+V1vRJs69Azgh0OxV9YmnAClgwK+MatpDDKFVQo7lIgVV5KaO1UXOPG7Mbf+dyZqO+QF96gFWMLGghAAAAABJRU5ErkJggg==')
			&--vk
				background-image url('data:image/png;base64,')
			&--youtube
				background-image url('data:image/png;base64,')
			a:hover&
				background-color rgba(#000, .05)
	&__phone
		position absolute
		top 18px
		right 15px
		text-align right
		@media $phone
			right auto
			left 15px
		&-item
			font 500 2rem Rubik
	&__email
		text-decoration underline
		text-decoration-style dotted
		a:hover&
			text-decoration none
	&__copyright
		position absolute
		right 15px
		bottom 0
		left 15px
		color #555
		font-size 1.4rem
		line-height 52px
		border-top 1px solid rgba(#000, .1)
		@media $phone
			display none
/*  </footer>  */

