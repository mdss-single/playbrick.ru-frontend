$big = "screen and (max-width:1200px)";
$tablet = "screen and (max-width:992px)";
$phone = "screen and (max-width:768px)";

/*  <inputs>  */
.input-text
	width 100%
	height 40px
	font-size 1.4rem
	background-color #fff
	border 1px solid rgba(#000, .2)
	padding 0 15px
	transition all .2s
	&:focus
		border-color #eeb70f
		box-shadow 0 0 2px #eeb70f, inset 0 2px 3px rgba(#000, .05)
	&.error
		color #ed1d20
		border-color #ed1d20
		box-shadow inset 0 2px 3px rgba(#000, .05)
		margin-bottom 4px
	& + .error
		color #ed1d20
		font-size 1.4rem
.textarea
	width 100%
	height 90px
	min-height 90px
	font-size 1.4rem
	background-color #fff
	border 1px solid rgba(#000, .2)
	padding 12px 15px
	resize vertical
	transition border-color .2s, box-shadow .2s
	&:focus
		border-color #eeb70f
		outline 0
		box-shadow 0 0 2px #eeb70f, inset 0 2px 3px rgba(#000, .05)
	&.error
		color #ed1d20
		border-color #ed1d20
		box-shadow inset 0 2px 3px rgba(#000, .05)
		margin-bottom 4px
	& + .error
		color #ed1d20
		font-size 1.4rem
.select
	width 100%
/*  </inputs>  */

/*  <buttons>  */
.btn
	height 40px
	color #fff
	font bold 1.2rem Rubik
	text-transform uppercase
	background-color #ed1d20
	border 0
	border-radius 3px
	padding 0 20px
	transition all .2s
	@media $big
		padding 0 14px
	&:hover
		background-color #cc1214
	&:active
		background-color #a80d10
	a&
		display inline-block
		line-height 40px
	&--empty
		color #ed1d20
		background-color #fff
		border 1px solid #ed1d20
		&:hover
			color #cc1214
			background-color #fff
			border-color #cc1214
		&:active
			color #a80d10
			background-color #fff
			border-color #a80d10
/*  </buttons>  */

/*  <page elements>  */
h1
.page-title
	font 500 3.7rem Rubik
.page-title
	margin 0 0 20px
h2
	color #ed1d20
	font 500 2.8rem Rubik
h3
	font 500 2.2rem Rubik
.form__row
	margin-bottom 30px
	&:last-child
		margin-bottom 0
.table
	width 100%
	th
		font-weight bold
		text-align left
		border-bottom 2px solid #f68e8f
		padding 10px 0
	td
		border-bottom 1px solid #eee
		padding 15px 0
/*  </page elements>  */

/*  <animations>  */
@keyframes fade
	from
		opacity 0
	to
		opacity 1
/*  </animations>  */

/*  <autocomplete>  */
.autocomplete-suggestions
	overflow hidden
	overflow-y auto
	max-height 200px
	background-color #fff
	border 1px solid #ccc
	margin-top 2px
	.autocomplete-suggestion
		cursor default
		color #333
		font-size 1.4rem
		padding 6px 10px
		&:hover
			background-color #fff6cc
	.selected
		background-color #fff6cc
	strong
		color #000
		font-weight normal